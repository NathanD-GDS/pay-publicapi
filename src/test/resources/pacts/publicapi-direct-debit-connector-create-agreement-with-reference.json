{
  "provider": {
    "name": "direct-debit-connector"
  },
  "consumer": {
    "name": "publicapi"
  },
  "interactions": [
    {
      "description": "Create a mandate request with reference",
      "providerStates": [
        {
          "name": "a gateway account with external id exists",
          "params": {
            "gateway_account_id": "7959d395-e720-4081-9e8a-a534cf76460a"
          }
        }
      ],
      "request": {
        "method": "POST",
        "path": "/v1/api/accounts/7959d395-e720-4081-9e8a-a534cf76460a/mandates",
        "body": {
          "return_url": "https://example.com/return",
          "agreement_type": "ON_DEMAND",
          "service_reference": "serviceref123"
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json",
          "Location": "http://localhost:1234/v1/api/accounts/7959d395-e720-4081-9e8a-a534cf76460a/mandates/test_mandate_id_xyz"
        },
        "body": {
          "mandate_id": "test_mandate_id_xyz",
          "mandate_type": "ON_DEMAND",
          "return_url": "https://example.com/return",
          "created_date": "2016-01-01T12:00:00.000Z",
          "state": {
            "status": "created",
            "finished": false
          },
          "links": [
            {
              "href": "http://localhost:1234/v1/api/accounts/7959d395-e720-4081-9e8a-a534cf76460a/mandates/mandateId",
              "method": "GET",
              "rel": "self"
            },
            {
              "href": "http://frontend_direct_debit/secure/token_1234567asdf",
              "rel": "next_url",
              "method": "GET"
            },
            {
              "href": "http://frontend_direct_debit/secure/",
              "rel": "next_url_post",
              "type": "application/x-www-form-urlencoded",
              "params": {
                "chargeTokenId": "token_1234567asdf"
              },
              "method": "POST"
            }
          ]
        },
        "matchingRules": {
          "body": {
            "$.created_date": {
              "matchers": [
                {
                  "match": "date",
                  "date": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
                }
              ],
              "combine": "AND"
            },
            "$.links[0].href": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "http://.*/v1/api/accounts/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}/mandates/[a-z0-9]*"
                }
              ],
              "combine": "AND"
            },
            "$.links[1].href": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "http://.*/secure/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            },
            "$.links[2].href": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "http://.*/secure"
                }
              ],
              "combine": "AND"
            },
            "$.links[2].params.chargeTokenId": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            },
            "$.mandate_id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.mandate_type": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.return_url": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.state.finished": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.state.status": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Location": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "http://.*/v1/api/accounts/7959d395-e720-4081-9e8a-a534cf76460a/mandates/[a-z0-9]*"
                }
              ],
              "combine": "AND"
            }
          }
        }
      }
    }
  ],
  "metadata": {
    "pact-specification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "3.5.16"
    }
  }
}
