            "$ref" : "#/definitions/CreatePaymentRequest"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Created",
            "schema" : {
              "$ref" : "#/definitions/Payment information"
            }
          },
          "400" : {
            "description" : "Bad request"
          },
          "401" : {
            "description" : "Credentials are required to access this resource"
          }
        }
      }
    },
